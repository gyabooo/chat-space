.sidebar
  .sidebar__head
    .chat-user
      %p.chat-user__name<>
        = current_user.name
      %ul.chat-user__items
        %li.chat-user__item
          =link_to new_group_path, class: "chat-user__btn" do
            = fa_icon 'edit', class: "chat_user__btn--icon"
        %li.chat-user__item
          =link_to edit_user_path(current_user.id), class: "chat-user__btn" do
            = fa_icon 'cog', class: "chat_user__btn--icon"
  .sidebar__chat-groups
    = render partial: 'shared/chat_group', collection: current_user.groups